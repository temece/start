# Create the game board
board = [' ' for _ in range(9)]

# Function to draw the game board
def draw_board():
    print('---------')
    for i in range(3):
        print('|', board[i*3], '|', board[i*3+1], '|', board[i*3+2], '|')
        print('')

# Function to check for a winner
def check_win(player):
    # Check rows and columns
    for i in range(3):
        if board[i*3] == board[i*3+1] == board[i*3+2] == player or \
           board[i] == board[i+3] == board[i+6] == player:
            return True
    # Check diagonals
    if board[0] == board[4] == board[8] == player or \
       board[2] == board[4] == board[6] == player:
        return True
    return False

# Main game function
def play_game():
    # Players
    players = ['X', 'O']
    current_player = players[0]
    game_over = False
    
    while not game_over:
        draw_board()
        # Player's move input
        move = input('Player ' + current_player + "'s turn (Enter a number from 1 to 9): ")
        
        # Check for valid move input
        if not move.isdigit() or int(move) < 1 or int(move) > 9:
            print('Invalid move, please try again')
            continue
        
        move = int(move) - 1
        
        # Check for occupied cell
        if board[move] != ' ':
            print('Cell already occupied, please try again')
            continue
        
        # Place the player's symbol on the board
        board[move] = current_player
        
        # Check for winner
        if check_win(current_player):
            draw_board()
            print('Player', current_player, 'wins!')
            game_over = True
        # Check for a tie
        elif ' ' not in board:
            draw_board()
            print('It\'s a tie!')
            game_over = True
        
        # Switch players
        current_player = players[1] if current_player == players[0] else players[0]

# Start the game
play_game()
